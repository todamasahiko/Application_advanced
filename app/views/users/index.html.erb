<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'books/list', {book: @book, user: current_user} %>
    </div>

    <div class="col-xs-9">
      <h2>Users</h2>
        <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
          </tr>
        </thead>

        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to user_path(user) do %>
              <%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
              <% end %>
            </td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id), class: "user_#{user.id}" %></td>
          </tr>
        <% end %>
        </tbody>
        </table>
    </div>
  </div>
</div>