<div class="container">
  <div class="row">
    <h2>User info</h2>
      <%= form_for(@user) do |f| %>
        <% if @user.errors.any? %>
          <div id="error_explanation">
            <p><%= @user.errors.count %> errors prohibited this obj from being saved:</p>
              <ul>
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
          </div>
        <% end %>
        
        <div class="field">
          <label>Name</label>
          <%= f.text_field :name, autofocus: true, class: "name" %>
        </div>

        <div class="field">
          <label>Image</label>
          <%= f.attachment_field :profile_image, class: "user_image"  %>
        </div>

        <div class="field">
          <label>Introduction</label>
          <%= f.text_area :introduction, autofocus: true, class: "introduction"  %>
        </div>

        <div class="action">
          <%= f.submit "Update User", class: "btn btn-primary" %>
        </div>
      <% end %>
  </div>
</div>